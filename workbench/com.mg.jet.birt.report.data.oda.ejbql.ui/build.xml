<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE project [
  <!ENTITY common SYSTEM "../common.xml">
]>

<project default="all" name="Millennium EJBQL ODA Driver UI">

  &common;
	
  <path id="project.class.path">
  	<path refid="thirdparty.path"/>
    <!--pathelement path="../../server/report/output/classes"/>
  	<pathelement path="../com.mg.merp.wb.core/output/classes"/-->
    <pathelement path="../com.mg.jet.birt.report.data.oda.ejbql/output/classes"/>
  </path>

  <target name="package" depends="compile">
    <copy todir="output/plugin/${plugin.folder.name}_${Bundle-Version}">  
    	<fileset dir="output/classes"/>
  	</copy>
  	<copy todir="output/plugin/${plugin.folder.name}_${Bundle-Version}/com/mg/jet/birt/report/data/oda/ejbql/ui"
  	  	  file="${src.folder}/com/mg/jet/birt/report/data/oda/ejbql/ui/messages.properties"/>
  	<antcall target="cmn.package"/>
  </target>

  <target name="all" depends="clean,compile,package,output" />	
	
</project>

<helpConfiguration
    version="2.0"
    xmlns="http://xmlns.oracle.com/help/web/config">

  <!-- Page branding based on ResourceBundle -->
  <brandings>
    <branding text="Millennium Business Suite Anywhere 2007 Система помощи" locales="ru"/>
  </brandings>

  <!-- Different locale setups. -->
  <locales>

    <!-- Russian: -->
    <locale language="ru">
      <books>
        <helpSet id="root" location="ru/root/root.hs"/>
        <helpSet id="reference" location="ru/reference/reference.hs"/>
        <helpSet id="discount" location="ru/discount/discount.hs"/>
        <helpSet id="docprocess" location="ru/docprocess/docprocess.hs"/>
        <helpSet id="finance" location="ru/finance/finance.hs"/>
        <helpSet id="retail" location="ru/retail/retail.hs"/>
        <helpSet id="settlement" location="ru/settlement/settlement.hs"/>
        <helpSet id="warehouse" location="ru/warehouse/warehouse.hs"/>
        <helpSet id="account" location="ru/account/account.hs"/>
        <helpSet id="contract" location="ru/contract/contract.hs"/>
        <helpSet id="liability" location="ru/liability/liability.hs"/>
        <helpSet id="manufacture" location="ru/manufacture/manufacture.hs"/>
        <helpSet id="mfreference" location="ru/mfreference/mfreference.hs"/>
        <helpSet id="paymentalloc" location="ru/paymentalloc/paymentalloc.hs"/>
        <helpSet id="paymentcontrol" location="ru/paymentcontrol/paymentcontrol.hs"/>
        <helpSet id="crm" location="ru/crm/crm.hs"/>
        <helpSet id="planning" location="ru/planning/planning.hs"/>
        <helpSet id="salary" location="ru/salary/salary.hs"/>
        <helpSet id="overall" location="ru/overall/overall.hs"/>
        <helpSet id="security" location="ru/security/security.hs"/>
        <helpSet id="table" location="ru/timeboard/timeboard.hs"/>
        <helpSet id="personnelref" location="ru/personnelref/personnelref.hs"/>
        <helpSet id="core" location="ru/core/core.hs"/>
        <helpSet id="bpm" location="ru/bpm/bpm.hs"/>
        <helpSet id="baiengine" location="ru/baiengine/baiengine.hs"/>
        <helpSet id="scheduler" location="ru/scheduler/scheduler.hs"/>
      </books>
    </locale>

  </locales>

  <!-- Navigator aliases - to allow for legacy navigator names. -->
  <navigatorAliases>

    <!-- Uncomment for Tree Based TOC Navigator
    <alias name="oracle.help.navigator.tocNavigator.TOCNavigator" 
           value="oracle.help.web.navigator.tocNavigator.TOCTreeNavigator" /> -->

  </navigatorAliases>

  <parameters>
    <combineBooks>false</combineBooks>
    <useLabelInfo>true</useLabelInfo>

    <!-- 
      Number of locales that are kept in memory all the time. 
      Please see the OHW documentation for more information on
      this parameter.
      <cacheSize>3</cacheSize>
    -->
  </parameters>

</helpConfiguration>

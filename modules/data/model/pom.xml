			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>service-jar</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>service</classifier>
						</configuration>
					</execution>
					<execution>
						<id>interface-jar</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>interface</classifier>
							<excludes>

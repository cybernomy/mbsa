<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
          http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>distribution-assembly</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <outputDirectory/>
      <directory>${project.parent.basedir}/release-notes/target/</directory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>ejb/</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>*:ejb:*</include>
      </includes>
      <excludes>
        <exclude>*:service:*</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>ui/</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>*:ui:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>interface/</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>*:interface:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>web/</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>*:war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>service/</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>*:jboss-sar</include>
        <include>*:jboss-har</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>lib/</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>*:documentcore:*</include>
        <include>*:framework:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>lib/</outputDirectory>
      <outputFileNameMapping>mgframework-aux.jar</outputFileNameMapping>
      <includes>
        <include>com.mg:framework-aux:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>lib/thirdparties</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>org.hibernate:*:jar</include>
      </includes>

    </dependencySet>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>docs/</outputDirectory>
      <outputFileNameMapping>
        ${artifact.build.finalName}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>*docs:*:zip</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>

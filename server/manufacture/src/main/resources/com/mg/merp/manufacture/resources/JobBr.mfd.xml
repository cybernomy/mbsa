        <jfd:menuItem id="run"
                      text="resource://com.mg.merp.manufacture.resources.formelements#Job.Run"
                      actionListener="Run"/>
        <jfd:menuItem id="stop"
                      text="resource://com.mg.merp.manufacture.resources.formelements#Job.Stop"
                      actionListener="Stop"/>
        <jfd:menuItem id="complete"
                      text="resource://com.mg.merp.manufacture.resources.formelements#Job.Complete"
                      actionListener="Complete"/>
      </jfd:popupMenu>

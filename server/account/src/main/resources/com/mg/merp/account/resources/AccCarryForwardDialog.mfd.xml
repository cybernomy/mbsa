	<jfd:border style="bevel" type="raised" />
		<jfd:field id="accPeriodFrom" alignment="expand_expand" fieldGroup="resource://com.mg.merp.account.resources.formelements#AccCarryForward.Dialog.PeriodsRange" text="resource://com.mg.merp.account.resources.formelements#AccCarryForward.Dialog.AccPeriodFrom" />

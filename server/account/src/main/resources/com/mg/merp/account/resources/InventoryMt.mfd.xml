		</jfd:maintenanceTable>	 	
	</jfd:container>
	<jfd:container  id="buttons" layout="jfd:box" alignment="expand_top">
		<jfd:button id="refreshButton" alignment="left_top" text="resource://com.mg.merp.account.resources.formelements#Inventory.RefreshButton" actionListener="Refresh" />	
		<jfd:filler id="buttonsFiller" alignment="expand_top" text="horizontalGlue" />
		<jfd:button id="OkButton" alignment="right_top" text="resource://com.mg.framework.resources.messages#OkButton" actionListener="Save" />
		<jfd:button id="CancelButton" alignment="right_top" text="resource://com.mg.framework.resources.messages#CloseButton" actionListener="Cancel" />	

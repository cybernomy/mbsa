<jfd:form xmlns:jfd="http://xmlns.m-g.ru/jet/ui" type="maintenance" orientation="ver" verticalGap="5" controller="com.mg.merp.account.support.ui.InventoryMt" title="resource://com.mg.merp.account.resources.formelements#Inventory.FormMt.Title" helpTopic="account#invdata_html" >

	<jfd:include name="com/mg/framework/resources/DefaultMaintenanceHeaderMacros.xml" />

	<jfd:container id="fields" layout="jfd:tabbed" alignment="expand_expand" >
 		<jfd:container id="commonFields" layout="jfd:defaultMtGridBag" alignment="expand_top" tabTitle="resource://com.mg.merp.account.resources.formelements#InvHead.Total.Tab" >

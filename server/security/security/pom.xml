<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.mg.server</groupId>
    <artifactId>security</artifactId>
    <version>4.0.8-SNAPSHOT</version>
  </parent>

  <groupId>com.mg.server.security</groupId>
  <artifactId>security</artifactId>

  <name>MBSA::Server::Security::Security</name>
  <description/>

  <build>
    <finalName>010msecurity-ejb</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <id>service-jar</id>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>service</classifier>
              <includes>
                <include>**/jboss/*.class</include>
                <include>**/support/SecuritySystem*</include>
                <include>**/JAASAuthenticationHolder.class</include>
                <include>**/DefaultCallbackHandler.class</include>
                <include>**/UIProfile*</include>
                <include>**/Principal.class</include>
              </includes>
            </configuration>
          </execution>
          <execution>
            <id>ejb-jar</id>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>ejb</classifier>
              <excludes>
                <exclude>**/ui/**</exclude>
              </excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
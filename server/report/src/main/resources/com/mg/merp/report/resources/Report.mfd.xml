<jfd:form xmlns:jfd="http://xmlns.m-g.ru/jet/ui" type="browse"
          controller="com.mg.merp.report.support.ui.ReportsBrowse" orientation="ver" verticalGap="5"
          title="resource://com.mg.merp.report.resources.formelements#ReportBrowse.Title">

  <jfd:toolBar id="toolBar" alignment="expand_top">
    <jfd:button id="printButton" text="resource://com.mg.framework.resources.messages#PrintButton"
                actionListener="Print"/>
    <jfd:button id="refreshButton"
                text="resource://com.mg.framework.resources.messages#RefreshButton"
                actionListener="Refresh"/>
  </jfd:toolBar>

  <jfd:container id="reportsBox" layout="jfd:box" alignment="expand_expand">
    <jfd:table id="reportsList" alignment="expand_expand" scroll="true"
               autoResize="subsequent_columns">
      <jfd:popupMenu>
        <jfd:menuItem id="printItem"
                      text="resource://com.mg.framework.resources.messages#PrintButton"
                      actionListener="Print" keyStroke="control P"/>
        <jfd:menuItem id="refreshItem"
                      text="resource://com.mg.framework.resources.messages#RefreshButton"
                      actionListener="Refresh" keyStroke="F5"/>
      </jfd:popupMenu>
    </jfd:table>

  </jfd:container>

</jfd:form>
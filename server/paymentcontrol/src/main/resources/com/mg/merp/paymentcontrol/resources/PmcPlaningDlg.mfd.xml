<jfd:form xmlns:jfd="http://xmlns.m-g.ru/jet/ui" orientation="ver" verticalGap="5" controller="com.mg.merp.paymentcontrol.support.ui.PmcPlaningDlg" title="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcPlaningDlg.Title" width="640" height="500" >
	<jfd:container id="centralBox" layout="jfd:box" columns="1" orientation="ver" alignment="expand_expand" >
	<jfd:border style="bevel" type="raised" />
		<jfd:container id="commonFields" layout="jfd:box" alignment="expand_top" columns="7">
			<jfd:field id="horizont" text="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcPlaningDlg.Horizont" alignment="expand_expand" /> 
			<jfd:field id="level" text="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcPlaningDlg.Level" alignment="expand_expand" /> 
			<jfd:button id="refresh" alignment="expand_expand" sameLine="true" text="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcPlaningDlg.Refresh" actionListener="PlanTableRefresh" /> 
			<jfd:button id="executeButton" alignment="expand_expand" sameLine="true" text="resource://com.mg.merp.paymentcontrol.resources.formelements#ExecuteLiability" actionListener="ExecuteLiability" /> 
			<jfd:button id="transferButton" alignment="expand_expand" sameLine="true" text="resource://com.mg.merp.paymentcontrol.resources.formelements#TransferResources" actionListener="TransferResources" /> 
		</jfd:container>
		<jfd:container id="split" layout="jfd:split" columns="1" orientation="ver" alignment="expand_expand" >
			<jfd:table id="planTable" scroll="true" alignment="expand_expand" >
				<jfd:popupMenu>
					<jfd:menuItem id="showRest" text="resource://com.mg.merp.paymentcontrol.resources.formelements#Restriction" actionListener="ShowRestriction" />
					<jfd:separator />
					<jfd:menuItem id="refresh" text="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcPlaningDlg.Refresh" actionListener="PlanTableRefresh" />
				</jfd:popupMenu>	
			</jfd:table>
			<jfd:container id="fields" layout="jfd:tabbed" alignment="expand_expand" >
				<jfd:maintenanceTable id="liabilityTable" scroll="true" alignment="expand_expand" tabTitle="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcDialog.LiabilityTab" >
					<jfd:popupMenu>
						<jfd:separator />
						<jfd:menuItem id="executeLiability" text="resource://com.mg.merp.paymentcontrol.resources.formelements#ExecuteLiability" actionListener="ExecuteLiability" />
						<jfd:separator />			
						<jfd:menu id="patterns" text="resource://com.mg.merp.paymentcontrol.resources.formelements#Liability.Patterns">
							<jfd:menuItem id="showLiabilityModelItem" text="resource://com.mg.merp.paymentcontrol.resources.formelements#Liability.ShowLiabilityModel" actionListener="ShowLiabilityModel" />
							<jfd:menuItem id="insertLiabilityModelItem" text="resource://com.mg.merp.paymentcontrol.resources.formelements#Liability.InsertLiabilityModel" actionListener="InsertModel" keyStroke="control INSERT" />
						</jfd:menu>
					</jfd:popupMenu>
				</jfd:maintenanceTable>
				<jfd:maintenanceTable id="executionTable" scroll="true" alignment="expand_expand" tabTitle="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcDialog.ExecutionTab" >
					<jfd:popupMenu>
						<jfd:separator />
						<jfd:menuItem id="remove" text="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcDialog.Remove" actionListener="Remove" />
						<jfd:separator />
						<jfd:menuItem id="approve" text="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcDialog.Approve" actionListener="Approve" />
						<jfd:menuItem id="disApprove" text="resource://com.mg.merp.paymentcontrol.resources.formelements#PmcDialog.DisApprove" actionListener="DisApprove" />
					</jfd:popupMenu>
				</jfd:maintenanceTable>
			</jfd:container>
		</jfd:container>
	</jfd:container>
</jfd:form>
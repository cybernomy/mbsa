					<jfd:menuItem id="refreshSpec" text="resource://com.mg.merp.lbschedule.resources.formelements#MenuItem.RefreshSpec" actionListener="RefreshSpec" />
				</jfd:popupMenu>
			</jfd:table>
		</jfd:container>		

	 				<jfd:menuItem id="showDocument" text="resource://com.mg.merp.contract.resources.formelements#Contract.Phase.ShowDocument" actionListener="ShowDocument"/>
	 			</jfd:popupMenu>
	 		</jfd:maintenanceTable>	 	  
		</jfd:container>	

 				<jfd:separator/>
 				<jfd:menuItem id="showOriginal" text="resource://com.mg.merp.contract.resources.formelements#ModifyDocument.Original.Show" actionListener="ShowOriginal" />
 				<jfd:menuItem id="downloadOriginal" text="resource://com.mg.merp.contract.resources.formelements#ModifyDocument.Original.Download" actionListener="DownloadOriginal" />
 				<jfd:menuItem id="uploadOriginal" text="resource://com.mg.merp.contract.resources.formelements#ModifyDocument.Original.Upload" actionListener="UploadOriginal" />
 				<jfd:menuItem id="removeOriginal" text="resource://com.mg.merp.contract.resources.formelements#ModifyDocument.Original.Remove" actionListener="RemoveOriginal" />
 			</jfd:popupMenu>
		</jfd:maintenanceTable>				 
	</jfd:container>


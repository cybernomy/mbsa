				<jfd:field id="factRest" readOnly="true" showLabel="false" alignment="expand_expand"/>
			</jfd:container>
			<jfd:container id="calcBox" layout="jfd:box" label="resource://com.mg.merp.contract.resources.formelements#Contract.CalcKind" >
				<jfd:field id="CalcSumKind" showLabel="false"/>
				<jfd:button id="calcButton" alignment="expand_expand" text="resource://com.mg.merp.contract.resources.formelements#Contract.CalcButton" actionListener="CalculateSum" />
			</jfd:container>
		</jfd:container>  		

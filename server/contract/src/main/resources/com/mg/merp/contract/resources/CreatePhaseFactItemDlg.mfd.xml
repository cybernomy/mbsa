               text="resource://com.mg.merp.contract.resources.formelements#CreatePhaseFactItemDlg.ItemKind"
               fieldGroup="resource://com.mg.merp.contract.resources.formelements#CreatePhaseFactItemDlg.OptionsGroup"/>

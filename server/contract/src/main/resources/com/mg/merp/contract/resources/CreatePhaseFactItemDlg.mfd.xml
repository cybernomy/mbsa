<jfd:form xmlns:jfd="http://xmlns.m-g.ru/jet/ui" orientation="ver" verticalGap="5"
          controller="com.mg.merp.contract.support.ui.CreatePhaseFactItemDlg"
          title="resource://com.mg.merp.contract.resources.formelements#CreatePhaseFactItemDlg.Title"
          width="320" height="270">
  <jfd:container id="mainBox" layout="jfd:defaultMtLayout" alignment="expand_expand">

<!-- $Id: EntityAuditSetupWizard.mfd.xml,v 1.2 2007/12/14 13:35:53 safonov Exp $ -->

<jfd:form xmlns:jfd="http://xmlns.m-g.ru/jet/ui" controller="com.mg.merp.core.support.ui.EntityAuditSetupWizard" title="resource://com.mg.merp.core.resources.formelements#EntityAuditSetupWizard.Title" orientation="ver" verticalGap="5" helpTopic="core#entity_audit_setup_wizard_html" >

	<jfd:toolBar id="toolBar" alignment="expand_top">
		<jfd:button id="ApplyButton" alignment="right_top" text="resource://com.mg.merp.core.resources.formelements#EntityAuditSetupWizard.Apply"
			actionListener="Apply" />
		<jfd:button id="OkButton" alignment="right_top" text="resource://com.mg.framework.resources.messages#CloseButton"
			actionListener="Ok" />
	</jfd:toolBar>

	<jfd:container id="split" layout="jfd:split" orientation="ver" alignment="expand_expand">
		<jfd:table id="entities" scroll="true" autoResize="subsequent_columns" alignment="expand_top" >
			<jfd:columns>
				<jfd:column fieldName="AuditedEntityName" title="resource://com.mg.merp.core.resources.dataitemlabels#Core.EntityName" />
				<jfd:column fieldName="Name" title="resource://com.mg.merp.core.resources.formelements#EntityAuditSetupWizard.EntitiesTable.Name" />
			</jfd:columns>
		</jfd:table>

		<jfd:container id="entityAuditSetup" layout="jfd:box" alignment="expand_expand" columns="2" >
			<jfd:container id="entityAudit" layout="jfd:box" alignment="left_top" orientation="ver" >
				<jfd:field id="auditCreate" actionListener="CheckCreate" alignment="expand_top" />
				<jfd:field id="auditModify" actionListener="CheckModify" alignment="expand_top" />
				<jfd:field id="auditRemove" actionListener="CheckRemove" alignment="expand_top" />
			</jfd:container>
			<jfd:table id="properties" scroll="true" autoResize="subsequent_columns" alignment="expand_expand" >
				<jfd:columns>
					<jfd:column fieldName="PropertyName" title="resource://com.mg.merp.core.resources.dataitemlabels#Core.PropertyName" />
					<jfd:column fieldName="Name" title="resource://com.mg.merp.core.resources.formelements#EntityAuditSetupWizard.PropertiesTable.Name" />
					<jfd:column fieldName="Audit" title="resource://com.mg.merp.core.resources.formelements#EntityAuditSetupWizard.PropertiesTable.Audit" />
				</jfd:columns>
			</jfd:table>
		</jfd:container>
	</jfd:container>

</jfd:form>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <typedef name="com.mg.framework.api.metadata.ApplicationLayer" class="com.mg.framework.support.orm.EnumUserType">
    <param name="enumClass">com.mg.framework.api.metadata.ApplicationLayer</param>
  </typedef>

  <class name="com.mg.merp.core.model.Form" table="SYS_FORM">
    <meta attribute="extends">com.mg.framework.service.PersistentObjectHibernate</meta>
    <cache usage="transactional"/>
    <id name="Id" type="java.lang.Integer">
      <column name="ID" not-null="true" unique="true" sql-type="INTEGER" />
      <generator class="sequence">
        <param name="sequence">SYS_FORM_ID_GEN</param>
      </generator>
    </id>
	<property name="ApplicationLayer" type="com.mg.framework.api.metadata.ApplicationLayer">
      <column name="APP_LAYER" not-null="true" sql-type="SMALLINT"/>
	</property>
    <many-to-one name="Role" class="com.mg.merp.security.model.Groups">
      <column name="ROLE_ID" not-null="false" />
    </many-to-one>
    <many-to-one name="User" class="com.mg.merp.security.model.SecUser">
      <column name="USER_ID" not-null="false" />
    </many-to-one>
    <property name="Name" type="java.lang.String">
      <column name="NAME" length="80" not-null="true" unique="true" sql-type="VARCHAR" />
    </property>
    <property name="Description" type="java.lang.String">
      <column name="DESCRIPTION" length="1024" not-null="false" sql-type="VARCHAR" />
    </property>
    <property name="Implementation" type="java.lang.String">
      <column name="IMPL_NAME" length="256" not-null="true" sql-type="VARCHAR" />
    </property>
    <many-to-one name="SysClass" class="com.mg.merp.core.model.SysClass">
      <column name="CLASS_ID" not-null="true" />
    </many-to-one>
  </class>
</hibernate-mapping>
